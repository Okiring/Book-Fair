<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mudez.mbf">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"

        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" android:screenOrientation="portrait" />
        <activity android:name=".ui.pages.AttendantHomeActivity" android:screenOrientation="portrait" />
        <activity android:name=".ui.pages.AgendaViewActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ui.pages.AdminLoginActivity" android:screenOrientation="portrait" />
        <activity android:name=".ui.pages.AdminHomePage" android:screenOrientation="portrait"/>
        <activity android:name=".ui.pages.AdminAddAgenda"  android:screenOrientation="portrait"/>
        <activity android:name=".ui.pages.AddItemPage"  android:screenOrientation="portrait"/>
        <activity android:name=".ui.pages.RecordSavedSuccess"  android:screenOrientation="portrait"/>
        <activity android:name=".ui.pages.CommentsPage" />
    </application>

</manifest>